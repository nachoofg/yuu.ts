{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "outDir": "./lib/dist",
        "rootDir": "./lib",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "removeComments": true
    },
    "exclude": [
        "node_modules",
        "./lib/dist"
    ],
    "include": [
        "lib"
    ]
}